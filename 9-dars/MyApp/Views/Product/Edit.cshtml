@model MyApp.Models.Product

<h1>Maxsulotni tahrirlash</h1>
<form method="post" asp-action="Edit" class="form">
    <input type="hidden" asp-for="Id">
    <div class="form-group">
        <label asp-for="Name">Nomi</label>
        <input asp-for="Name" placeholder="Maxsulot nomini kiriting" class="form-control">
        <span asp-validation-for="Name" class="text-danger"class="form-control"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Tavsifi</label>
        <textarea asp-for="Description"placeholder="Maxsulot tavsifini kiriting" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"class="form-control"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price">Narxi</label>
        <input type="number" asp-for="Price" placeholder="Maxsulot narxini kiriting" class="form-control">
        <span asp-validation-for="Price" class="text-danger"class="form-control"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl">Rasm URL</label>
        <textarea asp-for="ImageUrl"placeholder="Rasm URL" class="form-control"></textarea>
        <span asp-validation-for="ImageUrl" class="text-danger"class="form-control"></span>
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
    <a asp-action="Index" class="btn btn-warning">Bekor qilish</a>
</form>


@await Html.PartialAsync("_ValidationScriptsPartial")